@model RhMvc.Models.Funcionario;

@{
    ViewData["Title"] = "Cadastrando Funcionário";
}

<h1>Cadastrando Funcionário</h1>

</hr>

<div class="Row">
    <form asp-action="Criar">
        <div class="form-group">
            <label asp-for="Nome" class="control-label">Nome</label>
            <input asp-for="Nome" class="form-control"/>
        </div>     
        <div class="form-group">
            <label asp-for="Documento" class="control-label">Documento</label>
            <input asp-for="Documento" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="DataAdmissao" class="control-label">Data de Admissão</label>
            <input type="date" asp-for="DataAdmissao" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="Salario" class="control-label">Salário</label>
            <input asp-for="Salario" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="Ativo" class="control-label">Ativo</label>
            <input type="checkbox" asp-for="Ativo" class="form-input"/> 
        </div>
        </br>
        <div>
            <input type="submit" asp-action="Criar" value="Salvar" class="btn btn-primary"/>
        </div>
    </form>    
</div>
</br>
<a asp-action="Index">Voltar</a>

